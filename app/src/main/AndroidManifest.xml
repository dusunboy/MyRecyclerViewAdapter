<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myrecyclerviewadapter.vincent.app" >

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListActivity"/>
        <activity android:name=".GridActivity"/>
        <activity android:name=".ListMultiActivity"/>
        <activity android:name=".GridMultiActivity"/>
        <activity android:name=".SwipeRefreshActivity"/>
        <activity android:name=".SwipeRefreshListActivity"/>
        <activity android:name=".SwipeRefreshGridActivity"/>
    </application>

</manifest>